{
  "name": "@ricardo-jrm/nova",
  "description": "Typescript NPM Package Boilerplate",
  "version": "0.0.6-development",
  "bin": "bin.js",
  "main": "out/index.min.js",
  "types": "out/index.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardo-jrm/nova.git"
  },
  "author": {
    "name": "Ricardo Mota",
    "url": "https://github.com/ricardo-jrm"
  },
  "homepage": "https://github.com/ricardo-jrm/nova#readme",
  "bugs": {
    "url": "https://github.com/ricardo-jrm/nova/issues"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "npm",
    "eslint",
    "jest",
    "prettier",
    "husky",
    "cicd"
  ],
  "scripts": {
    "build": "tsc",
    "build:tsc-files": "tsc-files --noEmit",
    "bundle": "gulp",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "semantic-release": "semantic-release --branches main"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-jest": "^27.4.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.1",
    "ts-jest": "^27.1.0",
    "tsc-files": "^1.1.3",
    "typescript": "^4.4.4"
  }
}
